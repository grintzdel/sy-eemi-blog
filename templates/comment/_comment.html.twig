<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
                <h6 class="card-subtitle mb-1 text-muted">
                    <i class="bi bi-person-circle"></i>
                    <strong>{{ comment.getAuthor().getUsername() }}</strong>
                </h6>
                <small class="text-muted">
                    <i class="bi bi-clock"></i>
                    {{ comment.getCreatedAt()|date('d/m/Y à H:i') }}
                </small>
            </div>

            {% set commentEntity = comment.toDomain() %}
            {% if is_granted('DELETE', commentEntity) %}
                <form method="post"
                      action="{{ path('comment_delete', {id: comment.getId()}) }}"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            {% endif %}
        </div>

        <p class="card-text" style="white-space: pre-line;">{{ comment.getContent() }}</p>
    </div>
</div>