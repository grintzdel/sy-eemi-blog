<div class="card h-100 shadow-sm hover-shadow">
    {% if article.coverImage %}
        <img src="{{ asset('uploads/articles/' ~ article.coverImage) }}"
             class="card-img-top"
             alt="{{ article.heading }}"
             style="height: 200px; object-fit: cover;">
    {% endif %}
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">{{ article.heading }}</h5>
        <h6 class="card-subtitle mb-3 text-muted">{{ article.subheading }}</h6>
        <p class="card-text flex-grow-1">
            {{ article.content|length > 120 ? article.content|slice(0, 120) ~ '...' : article.content }}
        </p>
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-person"></i> {{ article.author }}
                </small>
                {% if showActions|default(true) %}
                    <div>
                        <a href="{{ path('article_edit', {id: article.id.value}) }}"
                           class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </div>
                {% else %}
                    <a href="{{ path('article_edit', {id: article.id.value}) }}"
                       class="btn btn-sm btn-outline-primary">
                        Lire plus <i class="bi bi-arrow-right"></i>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
    {% if showActions|default(true) %}
        <div class="card-footer bg-transparent">
            <form method="post" action="{{ path('article_delete', {id: article.id.value}) }}"
                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');"
                  class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger w-100">
                    <i class="bi bi-trash"></i> Supprimer
                </button>
            </form>
        </div>
    {% endif %}
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease-in-out;
    }

    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
