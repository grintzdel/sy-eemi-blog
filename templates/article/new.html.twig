{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">
                            <i class="bi bi-file-earmark-plus"></i> Créer un nouvel article
                        </h2>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.heading, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.heading) }}
                            {{ form_errors(form.heading) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.subheading, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.subheading) }}
                            {{ form_errors(form.subheading) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.content) }}
                            {{ form_errors(form.content) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.author, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.author) }}
                            {{ form_errors(form.author) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('article_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Créer l'article
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
