{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des Articles</h1>
            <a href="{{ path('article_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouvel Article
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if articles is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun article n'a encore été créé.
                <a href="{{ path('article_new') }}">Ajouter un article</a>
            </div>
        {% else %}
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-6 mb-4">
                        {% include 'article/_card.html.twig' with {'article': article, 'showActions': true} %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
