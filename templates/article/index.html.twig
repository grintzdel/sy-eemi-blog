{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des Articles</h1>
            <a href="{{ path('article_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouvel Article
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if articles is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucun article n'a encore �t� cr��.
                <a href="{{ path('article_new') }}">Cr�ez-en un maintenant !</a>
            </div>
        {% else %}
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ article.heading }}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{ article.subheading }}</h6>
                                <p class="card-text">
                                    {{ article.content|length > 150 ? article.content|slice(0, 150) ~ '...' : article.content }}
                                </p>
                                <p class="text-muted small">
                                    <i class="bi bi-person"></i> Par {{ article.author }}
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between">
                                    <a href="{{ path('article_edit', {id: article.id.value}) }}"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('article_delete', {id: article.id.value}) }}"
                                          onsubmit="return confirm('�tes-vous s�r de vouloir supprimer cet article ?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
