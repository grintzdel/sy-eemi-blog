{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
<div class="mb-3">
    {{ form_label(form.heading, 'Heading', {
        'label_attr': {'class': 'form-label'}
    }) }}
    {{ form_widget(form.heading, {
        'attr': {
            'class': 'form-control',
            'placeholder': 'Enter article heading'
        }
    }) }}
    {{ form_errors(form.heading) }}
</div>

<div class="mb-3">
    {{ form_label(form.subheading, 'Subheading', {
        'label_attr': {'class': 'form-label'}
    }) }}
    {{ form_widget(form.subheading, {
        'attr': {
            'class': 'form-control',
            'placeholder': 'Enter article subheading'
        }
    }) }}
    {{ form_errors(form.subheading) }}
</div>

<div class="mb-3">
    {{ form_label(form.content, 'Content', {
        'label_attr': {'class': 'form-label'}
    }) }}
    {{ form_widget(form.content, {
        'attr': {
            'class': 'form-control',
            'placeholder': 'Enter article content',
            'rows': 10
        }
    }) }}
    {{ form_errors(form.content) }}
</div>

<div class="mb-3">
    {{ form_label(form.author, 'Author', {
        'label_attr': {'class': 'form-label'}
    }) }}
    {{ form_widget(form.author, {
        'attr': {
            'class': 'form-control',
            'placeholder': 'Enter author name'
        }
    }) }}
    {{ form_errors(form.author) }}
</div>

<div class="mb-3">
    {{ form_label(form.coverImage, 'Cover Image', {
        'label_attr': {'class': 'form-label'}
    }) }}
    {% if article is defined and article.coverImage %}
        <div class="mb-2">
            <img src="{{ asset('uploads/articles/' ~ article.coverImage) }}"
                 alt="Current cover image"
                 class="img-thumbnail"
                 style="max-width: 200px; max-height: 200px; object-fit: cover;">
            <p class="text-muted small mt-1">Current image</p>
        </div>
    {% endif %}
    {{ form_widget(form.coverImage, {
        'attr': {
            'class': 'form-control'
        }
    }) }}
    {{ form_errors(form.coverImage) }}
</div>

<div class="d-flex justify-content-between">
    <a href="{{ path('article_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle"></i> {{ button_label|default('Save') }}
    </button>
</div>
{{ form_end(form) }}
